<div id="projects">
  <ul class="nav nav-tabs custom-tabs" id="myTab" role="tablist">
    <li class="nav-item active">
      <a class="nav-link active" id="strategy-tab" data-toggle="tab" href="#strategy" role="tab" aria-controls="strategy" aria-selected="true">Strategy</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="writing-tab" data-toggle="tab" href="#writing" role="tab" aria-controls="writing" aria-selected="false">Writing</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="workshop-tab" data-toggle="tab" href="#workshop" role="tab" aria-controls="workshop" aria-selected="false">Workshop</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane active fade in" id="strategy" role="tabpanel" aria-labelledby="strategy-tab">
      Strategy
    </div>
    <div class="tab-pane fade" id="writing" role="tabpanel" aria-labelledby="writing-tab">
      <div class="articles">
        <div class="row">
          <% data.article.articles.each do |article| %>
            <div class="col-xs-12 col-sm-4">
              <% link_to article["link"], target: "_blank" do %>
                <div class="card-article">
                  <div class="article">
                    <div class="article-logo">
                      <img src=<%= article["logo"] %> alt="logo" style="height: 30px;">
                    </div>
                    <div class="article-title">
                      <%= article["title"] %>
                    </div>
                    <div class="article-image" style="background-image: url(<%= article["image"] %>);"></div>
                    <div class="article-footer">


                      <%= article["tag"].upcase %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="workshop" role="tabpanel" aria-labelledby="workshop-tab">
      <div class="workshop-video">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" type="text/html" src="https://www.youtube.com/embed/gd6nF6DMO80?autoplay=0"></iframe>
        </div>
      </div>
    </div>
  </div>
</div>
